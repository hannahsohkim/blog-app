<% include ./partials/headers %>
<h1>Index Page</h1>

<% blogs.forEach((blog) => { %>
    <div>
        <h2><%= blog.title %> </h2>
        <img src='<%= blog.image %>' >
        <p>
            <span><%=blog.created.toDateString() %></span>
        </p>
        <p><%- blog.body.substring(0, 100) %> ...</p>
        <a href='/blogs/<%= blog._id %>'>Read More</a>
    </div>
<% }) %>

<% include ./partials/footers %>
